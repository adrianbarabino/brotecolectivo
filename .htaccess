RewriteRule ^artistas-([^/]+) index.php?pagina=artistas&page=$1
RewriteRule ^noticias-([^/]+)/ index.php?pagina=inicio&page=$1
RewriteRule ^noticias-([^/]+) index.php?pagina=inicio&page=$1
