RewriteRule ^letra/([^/]+)/ /contenido/letras.php?&tag=$1
RewriteRule ^video/([^/]+) index.php?pagina=video&tag=$1
RewriteRule ^contacto/([^/]+)/ index.php?pagina=contacto&asunto=$1
